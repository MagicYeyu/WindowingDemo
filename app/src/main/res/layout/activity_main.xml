<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Cons"
    tools:context=".Activity.MainActivity">

    <Button
        android:id="@+id/suspensionWindowsBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="悬浮窗"
        android:stateListAnimator="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dynamicWindowsBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="动态添加"
        android:stateListAnimator="@null"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/suspensionWindowsBt"
        app:layout_constraintStart_toStartOf="@+id/suspensionWindowsBt"
        app:layout_constraintTop_toBottomOf="@+id/suspensionWindowsBt" />

    <Button
        android:id="@+id/addPermissionBt"
        android:stateListAnimator="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="打开悬浮窗权限"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/dynamicWindowsBt"
        app:layout_constraintStart_toStartOf="@+id/dynamicWindowsBt"
        app:layout_constraintTop_toBottomOf="@+id/dynamicWindowsBt" />

</android.support.constraint.ConstraintLayout>